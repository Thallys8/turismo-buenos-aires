    {method} guardarReserva( (string, any)[] keyValueArray ) : void 
    {method} calcularPrecio( object reserva) : Number
    {method} obtenerReserva() : object
}

class Semana {
    {field} -dias : string[]

    {method} +getDias() : string[]
    {method} +getDias(Number posicion) : string

