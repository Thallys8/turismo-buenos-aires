class ConexionAlmacen {
    {field} -keys : object

    {method} -existeClave(string clave) : object[]
    {method} -agregarLocalArrayActualizable() : void
    {method} -dataFormToJson() : object

    {method} +solicitarInformacionAtracciones() : object[]
    {method} +solicitarDisponibilidad() : string[]
