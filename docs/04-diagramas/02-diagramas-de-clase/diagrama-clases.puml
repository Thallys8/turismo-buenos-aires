    {method} +ingresarInformacionSubscripciones(object nuevaInfo) : void
    {method} +ingresarInformacionReservas(object nuevaInfo) : void
}

class FiltroAtracciones {
    {field} -validador: Validador
    {field} -conexionAlmacen : ConexionAlmacen

    {method} +buscarAtracciones(Number momento, Number horario, Number actividad, Number grupo) : object[]
    {method} +buscarAtraccionesPorNombre(string nombre) : object
}
class Validador {
    {field} -emailRegEx : string   

    {method} +esEmail(string email) : boolean
    {method} +algunValorExiste( Number[] ArrayChequeado, Number[] ValoresBuscados) : boolean
}

class Itinerario{
    {static} -listaDias : string[]
    {field} -itinerario : HTMLElement

    {method} +cargarDiaItinerario( DataForm datosFormulario ) : void
    {method} +estaCompleto() : Boolean
    {method} +diaEnProceso() : Boolean
    {method} +toJSON() : void
    {method} +getItinerario() : object[]
}

class Reserva {
    {field} -conexionAlamacen : ConexionAlamacen 
    {field} -filtroAtracciones : FiltroAtracciones
    {field} -keysObligatorias : string[]
